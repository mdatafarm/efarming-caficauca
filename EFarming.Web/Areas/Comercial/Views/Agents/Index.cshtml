@model IEnumerable<EFarming.Core.ComercialModule.Agent>

@{
    ViewBag.Title = "Agent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("~/Areas/Comercial/Views/Shared/_Navegation_Comercial.cshtml")

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            @Html.ActionLink("Create New Client", "Create", null, new { @class = "btn btn-success btn-lg" })
            <br />
            <br />
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-3">
                        <div class="well well-lg">
                            <div class="row">
                                <div class="col-md-7"></div>
                                <div class="col-md-1">
                                    <a href="@Url.Action("Edit", new { id = item.Id })"><span class="glyphicon glyphicon-edit"></span></a>
                                </div>
                                <div class="col-md-1">
                                    <a href="@Url.Action("Details", new { id= item.Id })"> <span class="glyphicon glyphicon-list"></span></a>
                                </div>
                                <div class="col-md-1">
                                    <a href="@Url.Action("Delete", new { id= item.Id })"><span class="glyphicon glyphicon-remove"></span></a>
                                </div>
                            </div>
                            <h5><span class="glyphicon glyphicon-user"></span>  @item.Name</h5>
                            <h5><span class="glyphicon glyphicon-inbox"></span>  @item.Email</h5>
		        <h5><span class="glyphicon glyphicon-phone"></span>  @item.Phone</h5>
                            <h5><span class="glyphicon glyphicon-folder-open"></span>  @item.Client.Name</h5>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="row">
        <br />
        <br />
    </div>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Client.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Client.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

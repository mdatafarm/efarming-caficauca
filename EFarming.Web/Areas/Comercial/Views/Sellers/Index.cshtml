@model IEnumerable<EFarming.Core.ComercialModule.Seller>

@{
    ViewBag.Title = "Seller";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("~/Areas/Comercial/Views/Shared/_Navegation_Comercial.cshtml")


<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            @Html.ActionLink("Create New Seller", "Create", null, new { @class = "btn btn-success btn-lg" })
            <br />
            <br />
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-12">
                        <div class="well well-lg">
                            <div class="row">
                                <div class="col-md-2">
                                    @Html.DisplayFor(modelItem => item.Name)
                                </div>
                                <div class="col-md-6">
                                    @Html.DisplayFor(modelItem => item.Footer)
                                </div>
                                <div class="col-md-2">
                                    @Html.DisplayFor(model => item.Header)
                                </div>
                                <div class="col-md-1">
                                    @Html.DisplayFor(model => item.SubHeader)
                                </div>
                                <div class="col-md-1 text-center">
                                    <a href="@Url.Action("Edit", new { id = item.Id })"><span class="glyphicon glyphicon-edit"></span></a>
                                    <a href="@Url.Action("Details", new { id= item.Id })"> <span class="glyphicon glyphicon-list"></span></a>
                                    <a href="@Url.Action("Delete", new { id= item.Id })"><span class="glyphicon glyphicon-remove"></span></a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="row">
        <br />
        <br />
    </div>
</div>




@model EFarming.Core.ComercialModule.Fixation

<div id="deletePage">
    <h4>Are you sure you want to delete this Fixation?</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Our Ref
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Agreement.OurRef)
        </dd>

        <dt>
            Fixation Type
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FixationType.Type)
        </dd>

        <dt>
            Fixation Date
        </dt>

        <dd>
            @string.Format("{0:dd/MM/yyyy}", Model.FixationDate)
            @*@Html.DisplayFor(model => model.FixationDate)*@
        </dd>

        <dt>
            Fixation level
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FixationLevel)
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" />
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
        </div>
    }
</div>

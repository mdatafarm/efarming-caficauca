@model PagedList.IPagedList<EFarming.DTO.AdminModule.VillageDTO>

    @using PagedList.Mvc;
    <link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
    @{
        ViewBag.Title = AdminMessage.Villages;
        int counter = 0;
        Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    }

    <h2>
        @AdminMessage.Villages
    </h2>
    @using (Html.BeginForm("Index", "Villages", FormMethod.Get, new { @class = "form-horizontal", role = "form", novalidate = "novalidate" }))
    {
        <div class="filter-form">
            <div class="row">
                <div class="col-md-6">
                    <label class="control-label hidden-xs pull-left" for="department">@Message.Department</label>
                    <select class="form-control" id="department" name="searchDepartment"
                            data-bind="value: $root.department, options: $root.departments, optionsText:'name', optionsValue:'id',optionsCaption: '@string.Format(Message.SelectA, Message.Department)', selectedOptions: ['@ViewBag.CurrentDepartment'], event:{change: $root.getMunicipalities}"></select>
                </div>
                <div class="col-md-6">
                    <label class="control-label hidden-xs pull-left" for="department">@Message.Municipality</label>
                    <select class="form-control" id="municipality" name="searchMunicipality"
                            data-bind="value: $root.municipality, options: $root.municipalities, optionsText:'name', optionsValue:'id',optionsCaption: '@string.Format(Message.SelectA, AdminMessage.Municipality)', selectedOptions: ['@ViewBag.CurrentMunicipality']"></select>
                </div>
                <div class="col-md-6">
                    <label class="control-label hidden-xs pull-left">@Message.Name</label>
                    @Html.TextBox("searchString", ViewBag.CurrentFilter as string, new { @class = "form-control", placeholder = @Message.Name })
                </div>
                <div class="col-md-6 pull-right">
                    <button type="submit" class="btn btn-primary pull-right">@Message.Search</button>
                </div>
            </div>
        </div>
    }
    <br />
    <span class="pull-right">
        <a href="@Url.Action("Create", "Villages", new { })">
            <span class="glyphicon glyphicon-plus">
            </span>
            @AdminMessage.Create_New_Village
        </a>
    </span>
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover table-condensed">
            <thead>
                <tr>
                    <th>#</th>
                    <th>@AdminMessage.Department</th>
                    <th>@AdminMessage.Municipality</th>
                    <th>@Message.Name</th>
                    <th>@Message.Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var village in Model)
                {
                    counter += 1;
                    <tr>
                        <td>@counter</td>
                        <td>@Html.DisplayFor(modelItem => village.Municipality.Department.Name)</td>
                        <td>@Html.DisplayFor(modelItem => village.Municipality.Name)</td>
                        <td>@Html.DisplayFor(modelItem => village.Name)</td>
                        <td>
                            <a href="@Url.Action("Edit", "Villages", new { id = village.Id })">
                                <span class="glyphicon glyphicon-edit">
                                </span>
                                @Message.Edit
                            </a>
                            <a href="@Url.Action("Delete", "Villages", new { id = village.Id })">
                                <span class="glyphicon glyphicon-trash">
                                </span>
                                @Message.Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        @string.Format(Message.Paging, (Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber), Model.PageCount)

        @Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
    </div>

    <script src="~/Scripts/mvvm/Common.js"></script>
    <script src="~/Scripts/mvvm/Admin/village.js"></script>

    <script type="text/javascript">
        var selected = "@ViewBag.CurrentDepartment";
        var selectedMunicipality = "@ViewBag.CurrentMunicipality";
    </script>

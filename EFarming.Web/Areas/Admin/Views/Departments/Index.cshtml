@model PagedList.IPagedList<EFarming.DTO.AdminModule.DepartmentDTO>
    @using PagedList.Mvc;
    <link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
    @{
        Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
        ViewBag.Title = AdminMessage.Departments;
        int counter = 0;
    }

    <h2>
        @AdminMessage.Departments
    </h2>
    @using (Html.BeginForm("Index", "Departments", FormMethod.Get, new { @class = "form-horizontal", role = "form", novalidate = "novalidate" }))
    {
        <div data-bind="with: filter" class="filter-form">
            <div class="row">
                <div class="col-md-6">
                    <label class="control-label hidden-xs pull-left">@Message.Name</label>
                    @Html.TextBox("searchString", ViewBag.CurrentFilter as string, new { @class = "form-control", placeholder = @Message.Name })
                </div>
                <div class="col-md-6 pull-right">
                    <button type="submit" class="btn btn-primary pull-right">@Message.Search</button>
                </div>
            </div>
        </div>
    }
    <br />
    <span class="pull-right">
        <a href="@Url.Action("Create", "Departments", new { })">
            <span class="glyphicon glyphicon-plus">
            </span>
            @AdminMessage.Create_New_Department
        </a>
    </span>
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover table-condensed">
            <thead>
                <tr>
                    <th>#</th>
                    <th>@Message.Name</th>
                    <th>@FarmMessages.Code</th>
                    <th>@Message.Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var department in Model)
                {
                    counter += 1;
                <tr>
                    <td>@counter</td>
                    <td>@Html.DisplayFor(modelItem => department.Name)</td>
                    <td>@Html.DisplayFor(modelItem => department.Code)</td>
                    <td>
                        <a href="@Url.Action("Edit", "Departments", new { id = department.Id })">
                            <span class="glyphicon glyphicon-edit">
                            </span>
                            @Message.Edit
                        </a>
                        <a href="@Url.Action("Delete", "Departments", new { id = department.Id })">
                            <span class="glyphicon glyphicon-trash">
                            </span>
                            @Message.Delete
                        </a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
        @string.Format(Message.Paging,(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)  , Model.PageCount)
        
        @Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
    </div>

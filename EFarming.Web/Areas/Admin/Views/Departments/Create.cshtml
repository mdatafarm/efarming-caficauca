@model EFarming.DTO.AdminModule.DepartmentDTO
@{
                /**/

                Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
                ViewBag.Title = AdminMessage.Departments;
}
@using (Html.BeginForm("Create", "Departments", FormMethod.Post, new { @class = "form-horizontal to-validate", role = "form" }))
{
    @Html.AntiForgeryToken()


    <h2>
        @AdminMessage.Departments
    </h2>
    <hr />
    @Html.ValidationSummary(true)

    <div class="form-group has-feedback">
        <label class="control-label col-md-2" >@Message.Name</label>
        @*@Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })*@
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = @Message.Name, required = "required" })
            <span class="glyphicon form-control-feedback"></span>
            <span class="help-block">@Html.ValidationMessageFor(model => model.Name)</span>
        </div>
    </div>
    <div class="form-group has-feedback">
        <label class="control-label col-md-2">@FarmMessages.Code</label>
        @*@Html.LabelFor(model => model.Code, new { @class = "control-label col-md-2" })*@
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Code, new { @class = "form-control", placeholder =@FarmMessages.Code, required = "required" })
            <span class="glyphicon form-control-feedback"></span>
            <span class="help-block">@Html.ValidationMessageFor(model => model.Code)</span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-primary">@Message.Save</button>
            @Html.ActionLink(Message.Back, "Index")
        </div>
    </div>
}

@model PagedList.IPagedList<EFarming.DTO.AdminModule.PlantationVarietyDTO>

    @using PagedList.Mvc;
    <link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
    @{
        ViewBag.Title = AdminMessage.Plantation_Varieties;
        int counter = 0;
        Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    }

    <h2>
        @AdminMessage.Plantation_Varieties
    </h2>
    @using (Html.BeginForm("Index", "PlantationVarieties", FormMethod.Get, new { @class = "form-horizontal", role = "form", novalidate = "novalidate" }))
    {
        <div class="filter-form">
            <div class="row">
                <div class="col-md-6">
                    <label class="control-label hidden-xs pull-left" for="FarmStatus">@AdminMessage.Plantation_Type</label>
                    <select class="form-control" id="plantationType" name="searchPlantationType"
                            data-bind="value: $root.plantationType, options: $root.plantationTypes, optionsText:'name', optionsValue:'id',optionsCaption: '@string.Format(Message.SelectA, AdminMessage.Plantation_Type)'"></select>
                </div>
                <div class="col-md-6">
                    <label class="control-label hidden-xs pull-left">@Message.Name</label>
                    @Html.TextBox("searchString", ViewBag.CurrentFilter as string, new { @class = "form-control", placeholder = @Message.Name })
                </div>
                <div class="col-md-6 pull-right">
                    <button type="submit" class="btn btn-primary pull-right">
                        <span class="glyphicon glyphicon-search"></span>
                        @Message.Search
                    </button>
                </div>
            </div>
        </div>
    }
    <br />
    <span class="pull-right">
        <a href="@Url.Action("Create", "PlantationVarieties", new { })">
            <span class="glyphicon glyphicon-plus">
            </span>
            @AdminMessage.Create_New_Plantation_Variety
        </a>
    </span>
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover table-condensed">
            <thead>
                <tr>
                    <th>#</th>
                    <th>@AdminMessage.Plantation_Type</th>
                    <th>@Message.Name</th>
                    <th>@Message.Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var plantationVariety in Model)
                {
                    counter += 1;
                    <tr>
                        <td>@counter</td>
                        <td>@Html.DisplayFor(modelItem => plantationVariety.PlantationType.Name)</td>
                        <td>@Html.DisplayFor(modelItem => plantationVariety.Name)</td>
                        <td>
                            <a href="@Url.Action("Edit", "PlantationVarieties", new { id = plantationVariety.Id })">
                                <span class="glyphicon glyphicon-edit">
                                </span>
                                @Message.Edit
                            </a>
                            <a href="@Url.Action("Delete", "PlantationVarieties", new { id = plantationVariety.Id })">
                                <span class="glyphicon glyphicon-trash">
                                </span>
                                @Message.Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        @string.Format(Message.Paging, (Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber), Model.PageCount)

        @Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
    </div>

    <script src="~/Scripts/mvvm/Common.js"></script>
    <script src="~/Scripts/mvvm/Admin/plantation-varieties.js"></script>
    <script type="text/javascript">
        var selected = "@ViewBag.CurrentPlantationType";
    </script>

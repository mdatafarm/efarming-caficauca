@model EFarming.Core.TasqModule.TASQCriteria

@{
    ViewBag.Title = "Delete";
}

<div class="remote">
    <div class="col-md-10 col-md-offset-1">
        <div class="alert alert-danger fade in">
            <h4>Eliminar</h4>

            @*<p>
                Are you sure you want to delete this?
            </p>*@
            <p>
                <dl class="dl-horizontal">
                    <dt>
                        Indicador
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.FlagIndicator.Name)
                    </dd>

                    <dt>
                        Sub Categoría
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.SubModule.Name)
                    </dd>

                    <dt>
                        Descripción
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Description)
                    </dd>

                    <dt>
                        Nombre corto
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Short)
                    </dd>

                    <dt>
                        Orden
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.CriteriaOrder)
                    </dd>

                    <dt>
                        Opciones de respuestas
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Options)
                    </dd>

                </dl>
            </p>
            <p>
                @using (Html.BeginForm("Delete", "TASQCriterias", null, FormMethod.Post, new { @class = "to-validate remote-form", role = "form", @data_target = "tasq-criterias-content" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <center>
                            <label id="information"></label>
                        </center>
                        <br />
                        <div class="col-sm-offset-3 col-sm-9">
                            <button type="submit" class="btn btn-danger" id="SaveFarm">Eliminar</button>
                            <a class="btn btn-link modal-close" id="btnClosePopup" data-dismiss="modal">Cerrar</a>
                        </div>
                    </div>
                }
                <br />
                <br />
            </p>
        </div>
    </div>
</div>
<script src="~/Scripts/remote-validation.js"></script>

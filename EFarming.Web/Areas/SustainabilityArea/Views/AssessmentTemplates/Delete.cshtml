@model EFarming.Core.AdminModule.AssessmentAggregate.AssessmentTemplate

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2 class="page-name">Eliminar Evaluación</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Contacts")">
                    Sostenibilidad
                </a>
            </li>
            <li>
                <a href="@Url.Action("Index", "AssessmentTemplates")">
                    Evaluaciones
                </a>
            </li>

            <li class="active">
                <strong>Eliminar</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    @*<h3>Are you sure you want to delete this?</h3>*@
                    <div>
                        <h4>Evaluación</h4>
                        <hr />
                        <dl class="dl-horizontal">
                            <dt>
                               Nombre
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Name)
                            </dd>

                            <dt>
                                Tipo
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Type)
                            </dd>

                            <dt>
                                Fecha de creación
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.CreatedAt)
                            </dd>

                            <dt>
                                Fecha de actualización
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.UpdatedAt)
                            </dd>

                            <dt>
                               Fecha de eliminación
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.DeletedAt)
                            </dd>

                        </dl>

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color">
                                <input type="submit" value="Eliminar" class="btn btn-default" />
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .filters {
        margin-left: 10px;
    }
</style>

<div class="flot-chart farm-search">
    <div class="row">
        <div class="col-lg-12">
            <form role="form" class="filter-form" data-bind="with: farm">
                <div class="row-fluid">
                    <div class="col-md-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">

                                <h4 class="panel-title">Filtrar el listado de fincas</h4>
                            </div>

                            <div class="panel-body">

                                <div class="col-md-4 filters">
                                    <div class="form-group">
                                        <label for="searchDepartment" class="hidden-xs">Departamento</label>
                                        <div class="col-md-10">
                                            <select name="searchDepartment" id="searchDepartment" class="form-control col-md-10"></select>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group col-md-4">
                                    <div class="form-group">
                                        <label for="searchMunicipality" class="col-md-12">Municipios</label>
                                        <div class="col-md-10">
                                            <select name="searchMunicipality" id="searchMunicipality" class="form-control col-md-10"></select>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group col-md-4">
                                    <div class="form-group">
                                        <label for="searchVillage" class="col-md-12">Vereda</label>
                                        <div class="col-md-10">
                                            <select name="searchVillage" id="searchVillage" class="form-control"></select>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-4 filters">
                                    <div class="form-group">
                                        <label for="searchFarmerName" class="hidden-xs ">Nombre del productor</label>
                                        <div class="col-md-10">
                                            <input type="text" placeholder="Farmer Name" data-bind="value: farmerName" class="form-control" name="searchFarmerName" id="searchFarmerName">
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group col-md-4">
                                    <div class="form-group">
                                        <label for=" primary-code" class="hidden-xs">Nombre de la finca</label>
                                        <div class="col-md-10">
                                            <input type="text" placeholder="Farm Name" data-bind="value: name" class="form-control" name="searchName" id="searchName">
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group col-md-4">
                                    <div class="form-group">
                                        <label for=" primary-code" class="hidden-xs ">Código de la finca</label>
                                        <div class="col-md-10">
                                            <input type="text" placeholder="Farm Code" data-bind="value: code" class="form-control" name="searchCode" id="searchCode">
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-4 filters hidden">
                                    <div class="form-group">
                                        <label for="searchFarmerIdentification" class="hidden-xs ">Cédula del productor</label>
                                        <div class="col-md-10">
                                            <input type="text" placeholder="Farmer Identification" data-bind="value: farmerIdentification" class="form-control" name="searchFarmerIdentification" id="searchFarmerIdentification">
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group col-md-4">
                                    <label id="farmsfilter" class="btn btn-success pull-right btn-sf">
                                        <span class="glyphicon glyphicon-search"></span>
                                        Buscar
                                    </label>
                                </div>


                            </div>
                        </div>

                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

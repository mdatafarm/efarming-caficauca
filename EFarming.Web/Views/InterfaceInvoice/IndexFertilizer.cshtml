@model List<List<object>>

@{
    ViewBag.Title = "Interface Invoice fertilizer";
    Layout = "~/Views/Shared/_Layout.cshtml";
    DateTime today = DateTime.Now.Date;
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="col-lg-6 col-md-6 col-sm-6">
            <div class="container-fluid">
                <h1>Interfaz faturación fertilizantes</h1>
                <h2>Descargar plantilla facturación</h2>
                <a href="~/Content/TemplateInteface/Plantilla Facturación fertilizantes.xlsx" download="@today.ToString("yyMMdd")-Plantilla Facturación fertilizantes.xlsx" class="btn btn-lg btn-success">Descargar</a>
                <br />
            </div>
        </div>
        @*<div class="col-md-1 col-lg-1 col-sm-1"></div>*@
        <div class="col-md-6 col-lg-6 col-sm-6 text-justify">
            <h2>Cargar Archivo</h2>
            <h4>
                El nombre del archivo a cargar debe contener la siguiente estructura:
                Fecha del día actual:AAMMDD - Versión del archivo: 1 - Plantilla Facturación fertilizantes 
                <br /><b>EJEMPLOS:</b>
                <br /> 180326-1-Plantilla Facturación fertilizantes
                <br /> 180326-2-Plantilla Facturación fertilizantes
            </h4>
            <form action="/InterfaceInvoice/UploadInvoiceFertilizer" enctype="multipart/form-data" method="post">
                <input type="file" id="excelfile" name="excelfile" />
                <br />
                <input class="btn btn-lg btn-success" type="submit" value="Subir Archivo" />
            </form>
            <h3 style="color:red" id="Message">@ViewBag.message</h3>
        </div>
    </div>
    <hr />
</div>
<br /><br />



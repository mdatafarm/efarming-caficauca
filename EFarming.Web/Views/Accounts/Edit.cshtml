@model EFarming.DTO.AdminModule.UserDTO

@{
    ViewBag.Title = Message.Edit_Account;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>@Message.Edit_Account</h4>
        <hr />
        @Html.ValidationSummary(true)
        
        <div class="form-group">
            <label class="control-label col-md-2" for="FirstName">@Message.First_Name</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.FirstName)
                @Html.ValidationMessageFor(model => model.FirstName)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="LastName">@Message.Last_Name</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.LastName)
                @Html.ValidationMessageFor(model => model.LastName)
            </div>
        </div>

        <h4>@Message.Change_Password</h4>
        <hr />
        <div class="form-group">
            <label class="control-label col-md-2" for="Password">@Message.Old_Password</label>
            <div class="col-md-10">
                <input name="actualPassword" type="password"/>
                @Html.ValidationMessageFor(model => model.OldPassword)
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="NewPassword">@Message.New_Password</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NewPassword)
                @Html.ValidationMessageFor(model => model.NewPassword)
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="ConfirmPassword">@Message.Confirm_Password</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ConfirmPassword)
                @Html.ValidationMessageFor(model => model.ConfirmPassword)
            </div>
        </div>
        <div class="col-md-10 col-md-offset-1">
            <label class="col-md-3 bg-success" style="text-align:center">@ViewBag.ChangeSuccess</label>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@Message.Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink(Message.Back, "Index")
</div>

@model EFarming.DTO.AdminModule.UserDTO

@{
    Layout = null;
    string controllerName = HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString();
    string actionName = HttpContext.Current.Request.RequestContext.RouteData.Values["action"].ToString();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>@Message.Login - @Message.App_Name</title>

    <link rel="icon" href="~/Images/favicon.ico">

    <!-- Bootstrap -->
    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/login")
    @Styles.Render("~/Content/font")
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>

    <div class="container">
        <div class="login-form-links link2  animated fadeInRightBig">
            <div class="logo">
                <div class="row">
                    <div class="col-sm-6">
                        <img src="~/Images/LogoEfarmingHorizontalSmall.png" alt="e-farming-logo" style="width:190px" />
                    </div>
                    <div class="col-sm-6">
                        <img src="/Images/Clientes/3d93e18b-b323-41c1-b8cc-585493d77303.png" alt="logo" style="width: 170px; margin-top: -8px;">
                        @*<img src="~/Images/Clientes/3d93e18b-b323-41c1-b8cc-585493d77303.png" alt="logo" style="width:180px" />*@
                    </div>

                </div>
            </div>
        </div>
        @using (Html.BeginForm(actionName, controllerName, FormMethod.Post, new { @class = "to-validate form-signin", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="section-title">
                <h3>@Message.Register</h3>
            </div>
            <!-- Email -->

            <div class="textbox-wrap">
                <div class="form-group">
                    @Html.LabelFor(model => model.FirstName, Message.First_Name, new { @class = "col-lg-3 control-label hidden-xs" })
                    <div class="col-lg-9">
                        @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control", placeholder = Message.First_Name, required = "required" })
                        <span class="help-block"></span>
                    </div>
                </div>
            </div>
            <div class="textbox-wrap">
                <div class="form-group">
                    @Html.LabelFor(model => model.LastName, Message.Last_Name, new { @class = "col-lg-3 control-label hidden-xs" })
                    <div class="col-lg-9">
                        @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", placeholder = Message.Last_Name, required = "required" })
                        <span class="help-block"></span>
                    </div>
                </div>
            </div>
            <div class="textbox-wrap">
                <div class="form-group">
                    @Html.LabelFor(model => model.Role, Message.Role, new { @class = "col-lg-3 control-label hidden-xs" })
                    <div class="col-lg-9">
                        @Html.DropDownListFor(model => model.Role, (System.Web.Mvc.SelectList)ViewBag.Roles, new { @class = "form-control", placeholder = Message.Role, required = "required", type = "email" })
                        <span class="help-block"></span>
                    </div>
                </div>
            </div>
            <div class="textbox-wrap">
                <div class="form-group">
                    @Html.LabelFor(model => model.Email, Message.Email, new { @class = "col-lg-3 control-label hidden-xs" })
                    <div class="col-lg-9">
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = Message.Email, required = "required", type = "email" })
                        <span class="help-block"></span>
                    </div>
                </div>
            </div>
            <div class="textbox-wrap">
                <div class="form-group">
                    @Html.LabelFor(model => model.Password, Message.Password, new { @class = "col-lg-3 control-label hidden-xs" })
                    <div class="col-lg-9">
                        @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = Message.Password, required = "required" })
                        <span class="help-block"></span>
                    </div>
                </div>
            </div>
            <div class="clearfix">
                <div class="login-form-action clearfix pull-right">
                    <button type="submit" class="btn btn-success">@Message.Save</button>
                    |
                    <a href="@Url.Action("Index")" class="btn btn-link">@Message.Login</a>
                </div>
            </div>
            <br>
        }

        <div class="footer flogin">
            <p class="text-center">@string.Format(Message.Footer, DateTime.UtcNow.Year)</p>
        </div>
    </div> <!-- end container -->
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
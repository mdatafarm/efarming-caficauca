@model EFarming.DTO.AdminModule.CountryDTO
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts{
    <script src="~/Scripts/highcharts/highcharts.js"></script>
    <script src="~/Scripts/highcharts/highcharts-more.js"></script>
    <script src="~/Scripts/highcharts/solid-gauge.src.js"></script>
    <script src="~/Scripts/highcharts/exporting.js"></script>
    <script src="~/Scripts/dashboard/common.js"></script>
    <script src="~/Scripts/dashboard/overview-country.js"></script>
}

<link href="~/Content/themes/base/all.css" rel="stylesheet" />

@section breadcrumb{
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2 class="page-name">@DashboardMessage.Overview_By_Country</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="@Url.Action("Index", "Dashboard")">
                        @Message.Dashboard
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Overview")">
                        @DashboardMessage.Overview_Performance
                    </a>
                </li>
                <li class="active">
                    <strong>@Model.Name</strong>
                </li>
            </ol>
        </div>
        <div class="col-lg-2">
        </div>
    </div>
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="row">
        <div class="col-md-12">
            <form class="form-inline" role="form" method="get" action="/Overview/Country">
                <div class="form-group">
                    <label for="year">@Message.Start_Date</label>
                    <input type="date" id="start" name="start" class="form-control" value="@ViewBag.SelectedStart" />
                </div>
                <div class="form-group">
                    <label for="year">@Message.End_Date</label>
                    <input type="date" id="end" name="end" class="form-control" value="@ViewBag.SelectedEnd" />
                </div>
                <button type="submit" class="btn btn-default">@Message.Search</button>
                <input type="text" id="id" style="visibility:hidden" name="id" class="form-control" value="@ViewBag.CountryId" />
            </form>
        </div>
    </div>
</div>

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-9">
            <div class="row">
                <div class="col-lg-6">
                    <div class="ibox float-e-margins">
                        <div class="ibox-content" style="display: block;">
                            <div class="flot-chart">
                                <div class="charts" id="farms-per-location">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="ibox float-e-margins">
                        <div class="ibox-content" style="display: block;">
                            <div class="flot-chart">
                                <div class="charts" id="volume">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="ibox float-e-margins">
                        <div class="ibox-content" style="display: block;">
                            <div class="flot-chart">
                                <div class="charts" id="size">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="ibox float-e-margins">
                        <div class="ibox-content" style="display: block;">
                            <div class="flot-chart">
                                <div class="charts" id="varieties">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="ibox float-e-margins">
                        <div class="ibox-content" style="display: block;">
                            <div class="flot-chart">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>@Message.Country</th>
                                            <th>@FarmMessages.Farms</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var supplier in (IEnumerable<IGrouping<EFarming.Core.AdminModule.SupplierAggregate.Supplier, EFarming.Core.FarmModule.FarmAggregate.Farm>>)ViewBag.Suppliers)
                                        {
                                            <tr>
                                                <td>@supplier.Key.Name</td>
                                                <td>@supplier.Count()</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="ibox float-e-margins">
                <div class="ibox-content information-content">
                    <div class="file-manager">
                        <h4 class="information">@DashboardMessage.Plantation_Information</h4>
                        <div class="space-25"></div>
                        <ul class="folder-list m-b-md">
                            <li>
                                <i class="fa fa-globe">&nbsp;</i>
                                @AdminMessage.Location:
                                <span class="pull-right">
                                    <strong>
                                        <a href="@Url.Action("Index", "Overview")">
                                            @ViewBag.Location
                                        </a>
                                    </strong>
                                </span>
                            </li>
                            <li>
                                <i class="fa fa-map-marker">&nbsp;</i>
                                @Message.Suppliers:
                                <ul>
                                    @foreach (var supplier in (IEnumerable<IGrouping<EFarming.Core.AdminModule.SupplierAggregate.Supplier, EFarming.Core.FarmModule.FarmAggregate.Farm>>)ViewBag.Suppliers)
                                    {
                                        <li>
                                            <a href="@Url.Action("Supplier", "Overview", new { id = supplier.Key.Id })">
                                                @supplier.Key.Name
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </li>
                            <li>
                                <i class="fa fa-home"></i>
                                @DashboardMessage.Number_Of_Farms:
                                <span class="badge pull-right">@ViewBag.CountFarms</span>
                            </li>
                            <li>
                                <i class="fa fa-th-large"></i>
                                @DashboardMessage.Total_Area:
                                <span class="badge pull-right">@ViewBag.TotalArea</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-ui-1.10.4.min.js"></script>
<script type="text/javascript">
    var countryId = "@ViewBag.CountryId";

    var startDate = "@ViewBag.SelectedStart.ToString("yyyy-MM-dd")";
    var endDate = "@ViewBag.SelectedEnd.ToString("yyyy-MM-dd")";

    $("#start").datepicker({
        changeMonth: true,
        changeYear: true,
        dateFormat: "yy-mm-dd",
        beforeShow: function (input, inst) {
            var rect = input.getBoundingClientRect();
            setTimeout(function () {
                inst.dpDiv.css({ top: rect.top + 40, left: rect.left + 0 });
            }, 0);
        }
    });

    $("#end").datepicker({
        changeMonth: true,
        changeYear: true,
        dateFormat: "yy-mm-dd",
        beforeShow: function (input, inst) {
            var rect = input.getBoundingClientRect();
            setTimeout(function () {
                inst.dpDiv.css({ top: rect.top + 40, left: rect.left + 0 });
            }, 0);
        }
    });
</script>
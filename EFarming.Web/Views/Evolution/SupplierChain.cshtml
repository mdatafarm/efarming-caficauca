@model EFarming.DTO.AdminModule.SupplyChainDTO
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts{
    <script src="~/Scripts/highcharts/highcharts.js"></script>
    <script src="~/Scripts/highcharts/highcharts-more.js"></script>
    <script src="~/Scripts/highcharts/solid-gauge.src.js"></script>
    <script src="~/Scripts/highcharts/exporting.js"></script>
    <script src="~/Scripts/dashboard/common.js"></script>
    <script src="~/Scripts/dashboard/evolution-supplierChain.js"></script>
}

@section breadcrumb{
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2 class="page-name">@DashboardMessage.Evolution_By_Supplier_Chain</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="@Url.Action("Index", "Dashboard")">
                        @Message.Dashboard
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Evolution")">
                        @DashboardMessage.Overview_Performance
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Country", "Evolution", new { id = Model.Supplier.CountryId })">
                        @Model.Supplier.Country.Name
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Supplier", "Evolution", new { id = Model.SupplierId })">
                        @Model.Supplier.Name
                    </a>
                </li>
                <li class="active">
                    <strong>@Model.Name</strong>
                </li>
            </ol>
        </div>
        <div class="col-lg-2">
        </div>
    </div>
}

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-9">
            <div class="row">
                <div class="col-lg-12">
                    <div class="ibox float-e-margins">
                        <div class="ibox-content" style="display: block;">
                            <div class="flot-chart">
                                <div class="charts" id="volume">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="ibox float-e-margins">
                        <div class="ibox-content" style="display: block;">
                            <div class="flot-chart">
                                <div class="charts" id="sustainability">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="ibox float-e-margins">
                        <div class="ibox-content" style="display: block;">
                            <div class="flot-chart">
                                <div class="table-responsive">
                                    <table class="table table-striped table-hover table-condensed">
                                        <thead>
                                            <tr>
                                                <th>@AdminMessage.Department</th>
                                                <th>@AdminMessage.Municipality</th>
                                                <th>@AdminMessage.Village</th>
                                                <th>@Message.Name</th>
                                                <th>@FarmMessages.Code</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var farm in (List<EFarming.DTO.FarmModule.FarmDTO>)ViewBag.Farms)
                                            {
                                                <tr>
                                                    <td>@farm.Village.Municipality.Department.Name</td>
                                                    <td>@farm.Village.Municipality.Name</td>
                                                    <td>@farm.Village.Name</td>
                                                    <td>
                                                        <a href="@Url.Action("Dashboard", "Farms", new { id = farm.Id })">
                                                            @farm.Name
                                                        </a>
                                                    </td>
                                                    <td>@farm.Code</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="ibox float-e-margins">
                <div class="ibox-content information-content">
                    <div class="file-manager">
                        <h4 class="information">@DashboardMessage.Plantation_Information</h4>
                        <div class="space-25"></div>
                        <ul class="folder-list m-b-md">
                            <li>
                                <i class="fa fa-globe">&nbsp;</i>
                                @AdminMessage.Location:
                                <span class="pull-right">
                                    <strong>
                                        <a href="@Url.Action("Supplier", "Evolution", new { id = @ViewBag.Supplier })">
                                            @ViewBag.Location
                                        </a>
                                    </strong>
                                </span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    var supplierChainId = "@ViewBag.SupplierChainId";
</script>
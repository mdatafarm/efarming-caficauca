        <div class="col-sm-8">
            @Html.TextBoxFor(model => model.Education, new { type = "number", @class = "form-control", placeholder = @Message.Education, required = "required" })
            <span class="glyphicon form-control-feedback hidden"></span>
            <span class="help-block"></span>
        </div>
    </div>*@
<div class="form-group has-feedback">
    <label class="control-label hidden-xs col-sm-3" for="PhoneNumber">Teléfono</label>
    <div class="col-sm-8">
        @Html.TextBoxFor(model => model.PhoneNumber, new { type = "number", @class = "form-control", placeholder = "Phone Number" })
        <span class="glyphicon form-control-feedback hidden"></span>
        <span class="help-block"></span>
    </div>
</div>
<div class="form-group has-feedback">
    <label class="control-label hidden-xs col-sm-3" for="Education">@Message.Relationship</label>
    <div class="col-sm-8">
        <select class="form-control" id="Relationship" name="Relationship" required
                data-bind="value: relationship, options: relationshipList, optionsCaption: '@string.Format(Message.SelectA, Message.Relationship)'"></select>
        <span class="hide glyphicon form-control-feedback"></span>
        <span class="help-block"></span>
    </div>
</div>
<div class="form-group has-feedback">
    <label class="control-label hidden-xs col-sm-3" for="MaritalStatus">@Message.Marital_Status</label>
    <div class="col-sm-8">
        <select class="form-control" id="MaritalStatus" name="MaritalStatus" required
                data-bind="value: maritalStatus, options: maritalStatusList, optionsCaption: '@string.Format(Message.SelectA, Message.Marital_Status)'"></select>
        <span class="hide glyphicon form-control-feedback"></span>
        <span class="help-block"></span>
    </div>
</div>
@*<div class="checkbox col-sm-offset-3">
        <label>
            @Html.CheckBoxFor(model => model.IsOwner)
            @Message.Owner
        </label>
    </div>*@
<br />
<div class="form-group">
    <center>
        <label id="information"></label>
    </center>
    <br />
    <div class="col-sm-offset-3 col-sm-9">
        <button class="btn btn-success" id="btnSubmit">@Message.Save</button>
        <a class="btn btn-link link-delete modal-close" id="btnClosePopup" data-dismiss="modal">@Message.Close</a>
    </div>
</div>
<script>
    $(document).ready(function () {
        $("#Age").attr("readonly", true);
        var split = $("#Age").val().split('/');
        //console.log(split[2]);

        if (split[2] == "0001" || split[2] < "1920") {
            console.log("Deshabilitar boton");
            $("#btnSubmit").attr("disabled", true);
        }
        else {
            //alert("entro");
            $("#btnSubmit").attr("disabled", false);
        }
    });
</script>


@model EFarming.DTO.ImpactModule.CategoryDTO

@{
    ViewBag.Title = @IndicatorMessage.Edit_Category;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2 class="page-name text-uppercase">@IndicatorMessage.Edit_Category</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Home")">@Message.Home</a>
            </li>

            <li>
                <a href="@Url.Action("Index", "Indicators")">@IndicatorMessage.Impact_Indicators</a>
            </li>

            <li>
                <a href="@Url.Action("Index", "Categories")">@IndicatorMessage.Categories</a>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>@IndicatorMessage.Edit_Category</h5>
                </div>
                <div class="ibox-content">
                    <div class="flot-chart farm-search">
                        <div class="row">
                            <div class="col-lg-10 col-lg-offset-1">
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-horizontal">

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.Name, new { @class = "hidden-xs" })
                                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = @Message.Name, required = "required" })
                                        </div>
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.Score, new { @class = "hidden-xs" })
                                            @Html.TextBoxFor(model => model.Score, new { @class = "form-control col-lg-1", placeholder = @Message.Score, required = "required", type = "number", min = 0 })
                                        </div>
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.AssessmentTemplateId, new { @class = "hidden-xs" })
                                            @Html.DropDownList("AssessmentTemplateId", (IEnumerable<SelectListItem>)ViewBag.AssessmentTemplateId, string.Format(Message.SelectA, QualityMessage.Assessment_Template), new { @class = "form-control col-lg-1" })
                                        </div>

                                        <div class="form-group">
                                            <button type="submit" class="btn btn-success">@Message.Save</button>
                                            <a href="@Url.Action("Index", "Categories")" class="btn btn-link link-delete">@Message.Back</a>
                                        </div>
                                    </div>
                                }
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@model EFarming.DTO.FarmModule.FarmDTO
<br />
<div class="row" id="plantations-content">
    @Html.Partial("~/Views/Plantations/Index.cshtml")
</div>

<div class="row" id="productivity-container" data-bind="with: productivity">
    <div id="productivity-table" class="col-lg-6">
        <br />
        <h3 class="page-header text-capitalize">@FarmMessages.Productivity_Information</h3>
        <br />
        @Html.HiddenFor(model => model.Productivity.Id)

        <div class="col-md-12">
            <table class="table table-responsive table-hover">
                <tbody>
                    <tr>
                        <td><b>Edad promedio</b></td>
                        <td>@Model.Productivity.averageAge.ToString("0.##")</td>
                    </tr>
                    <tr>
                        <td><b>Densidad promedio</b></td>
                        <td>@Convert.ToDouble(Model.Productivity.averageDensity.Replace(".", ",")).ToString("0.##")</td>
                    </tr>
                    <tr>
                        <td><b><u>Área en café</u></b></td>
                        <td>@Model.Productivity.coffeeArea</td>
                    </tr>
                    <tr>
                        <td><b>Producción estimada calculada</b></td>
                        <td>@Model.Productivity.estimatedProduction</td>
                    </tr>
                    <tr>
                        <td><b>Producción estimada calculada + sugerida</b></td>
                        <td>@ViewBag.ProdEstManual</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="col-md-12">
            <br />
            <h4 class="page-header text-capitalize">Árboles productivos</h4>
            <table class="table table-responsive table-hover">
                <tbody>
                    <tr>
                        <td><b>Árboles productivos</b></td>
                        <td>@Model.Productivity.productionPlants</td>
                    </tr>
                    <tr>
                        <td><b>Árboles productivos (%)</b></td>
                        <td>% @Model.Productivity.productionPercentage.ToString("0.##")</td>
                    </tr>
                    <tr>
                        <td><b>Área productiva</b></td>
                        <td>@Model.Productivity.productionArea</td>
                    </tr>
                    <tr>
                        <td><b>Área productiva (%)</b></td>
                        <td>% @Model.Productivity.productionAreaPercentage.ToString("0.##")</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="col-md-12">
            <br />
            <h4 class="page-header text-capitalize">Growing trees</h4>
            <table class="table table-responsive table-hover">
                <tbody>
                    <tr>
                        <td><b>Árboles en levante</b></td>
                        <td>@Model.Productivity.growingPlants</td>
                    </tr>
                    <tr>
                        <td><b>Árboles en levante (%)</b></td>
                        <td>% @Model.Productivity.growingPercentage.ToString("0.##")</td>
                    </tr>
                    <tr>
                        <td><b>Área en levante</b></td>
                        <td>@Model.Productivity.growingArea</td>
                    </tr>
                    <tr>
                        <td><b>Área en levante (%)</b></td>
                        <td>% @Model.Productivity.growingAreaPercentage.ToString("0.##")</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="col-md-12">
            <br />
            <h4 class="page-header text-capitalize">Información de variedades</h4>
            <table class="table table-responsive table-hover">
                <tbody>
                    <tr>
                        <td><b>Colombia (%)</b></td>
                        <td class="align-right" id="percentageColombia">% @ViewBag.opeColombia.ToString("0.##")</td>
                    </tr>
                    <tr>
                        <td><b>Caturra (%)</b></td>
                        <td class="align-right" id="percentageCaturra">% @ViewBag.opeCaturra.ToString("0.##")</td>
                    </tr>
                    <tr>
                        <td><b>Castillo (%)</b></td>
                        <td class="align-right" id="percentageCastillo">% @ViewBag.opeCastillo.ToString("0.##")</td>
                    </tr>
                    <tr>
                        <td><b>Otro (%)</b></td>
                        <td class="align-right" id="percentageotra">% @ViewBag.opeOtro.ToString("0.##")</td>
                    </tr>
                    <tr style="background:rgba(149, 193, 31, 0.38);">
                        <td><b>TOTAL (%)</b></td>
                        <td class="align-right" id="total">% @ViewBag.total.ToString("0.##")</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="col-lg-6 form-horizontal">
        <br />
        <h3 class="page-header text-capitalize">@FarmMessages.Productivity_Information</h3>
        <br />
        <div class="form-group has-feedback col-md-12">
            @Html.LabelFor(model => model.Productivity.InfrastructureHectares, @FarmMessages.Infrastructure_Hectares, new { @class = "col-sm-6 control-label hidden-xs" })
            <div class="col-sm-6">
                @Html.TextBoxFor(model => model.Productivity.InfrastructureHectares, new { @class = "form-control", placeholder = @FarmMessages.Infrastructure_Hectares, required = "required" })
                <span class="help-block"></span>
            </div>
        </div>

        <div class="form-group has-feedback col-md-12">
            <label class="col-sm-6 control-label hidden-xs" for="Productivity_TotalHectares">Hectáreas de cafe</label>
            <div class="col-sm-6">
                <input class="form-control" disabled="disabled" placeholder="Hectáreas de cafe" type="text" value="@Model.Productivity.coffeeArea">
            </div>
        </div>
        <div class="form-group has-feedback col-md-12">
            @Html.LabelFor(model => model.Productivity.TotalHectares, @FarmMessages.Total_Hectares, new { @class = "col-sm-6 control-label hidden-xs" })
            <div class="col-sm-6">
                @Html.TextBoxFor(model => model.Productivity.TotalHectares, new { @class = "form-control", placeholder = @FarmMessages.Total_Hectares, required = "required", disabled = "disabled" })
                <span class="help-block"></span>
            </div>
        </div>
    </div>
</div>

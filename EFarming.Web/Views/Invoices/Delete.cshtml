@model EFarming.DTO.TraceabilityModule.InvoiceDTO
<div class="remote">
    <div class="col-md-10 col-md-offset-1">
        <div class="alert alert-danger fade in">
            <h4>@Message.Delete_Item</h4>
            <p>
                @Message.Delete_Item_Text

                @Message.Confirmation_Question
            </p>
            <p>
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Receipt)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Receipt)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Weight)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Weight)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Price)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Price)
                    </dd>

                </dl>
            </p>
            <p>
                @using (Html.BeginForm("Delete", "Invoices", new { id = Model.Id }, FormMethod.Post, new { @class = "to-validate remote-form", role = "form", @data_target = "invoices-content" }))
                {
                    <input type="hidden" value="@ViewBag.PageNumber" name="page" />
                    <input type="hidden" value="@Model.FarmId" name="FarmId" />
                    <div class="form-group">
                        <div class="col-sm-offset-3 col-sm-9">
                            <button type="submit" class="btn btn-danger">@Message.Confirmation_Text</button>
                            <a class="btn btn-link modal-close" data-dismiss="modal">@Message.Close</a>
                        </div>
                    </div>
                }
                <br />
                <br />
            </p>
        </div>
    </div>
</div>
<script src="~/Scripts/remote-validation.js"></script>
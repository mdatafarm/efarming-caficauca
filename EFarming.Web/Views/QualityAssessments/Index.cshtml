@model IEnumerable<EFarming.DTO.QualityModule.SensoryProfileAssessmentDTO>

@{
    ViewBag.Title = QualityMessage.Quality_Assessment;
}
@section breadcrumb{
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2 class="page-name">@QualityMessage.Quality_Assessment</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="@Url.Action("Index", "Home")">
                        @Message.Home
                    </a>
                </li>
                <li class="active">
                    <strong>@QualityMessage.Quality_Assessment;</strong>
                </li>
            </ol>
        </div>
        <div class="col-lg-2">
        </div>
    </div>
}

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>@QualityMessage.Search</h5>
                </div>
                <div class="ibox-content">
                    <div class="flot-chart farm-search">
                        <div class="row">
                            <div class="col-lg-12">
                                <form role="form" class="filter-form">
                                    <div class="row-fluid">
                                        <div class="col-lg-6 col-sm-6">
                                            <div class="form-group">
                                                <label for="description" class="hidden-xs ">@Message.Description</label>
                                                <input type="text" placeholder="@Message.Description" class="form-control" name="description" id="searchFarmerIdentification">
                                            </div>
                                            <input type="hidden" name="buscar" value="true" />
                                            <div class="form-group">
                                                <button class="btn btn-success pull-right btn-sf">
                                                    <span class="glyphicon glyphicon-search"></span>
                                                    @Message.Search
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="table-responsive">
                                    <table class="table table-striped  table-hover table-condensed">
                                        <thead>
                                            <tr>
                                                <th>@Message.Description</th>
                                                <th>@Message.Date</th>
                                                <th>@Message.Name</th>
                                                <th>@Message.Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var assessment in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        <a href="@Url.Action("Edit", "QualityAssessments", new { id = assessment.Id })">
                                                            @Html.DisplayFor(modelItem => assessment.Description)
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <a href="@Url.Action("Edit", "QualityAssessments", new { id = assessment.Id })">
                                                            @Html.DisplayFor(modelItem => assessment.Date)
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <a href="@Url.Action("Edit", "QualityAssessments", new { id = assessment.Id })">
                                                            @Html.DisplayFor(modelItem => assessment.User.FirstName)
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <a href="@Url.Action("Edit", "QualityAssessments", new { id = assessment.Id })" class="btn btn-link link-edit">
                                                            <span class="glyphicon glyphicon-edit"></span>
                                                            @Message.Edit
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
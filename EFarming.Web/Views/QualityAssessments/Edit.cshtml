@model IEnumerable<EFarming.DTO.QualityModule.QualityAttributeDTO>
@{
}

@section breadcrumb{
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2 class="page-name">@FarmMessages.Farms</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="@Url.Action("Index", "Home")">
                        @Message.Home
                    </a>
                </li>
                <li class="active">
                    <strong>@QualityMessage.Quality_Assessment</strong>
                </li>
            </ol>
        </div>
        <div class="col-lg-2">
            <a class="btn btn-danger pull-right btn-lg new-fm" href="@Url.Action("Delete", "QualityAssessments", new { Id = ViewBag.AssessmentId })">
                <span class="glyphicon glyphicon-plus-sign"></span>
                @QualityMessage.Delete_Quality_Assessment
            </a>
        </div>
    </div>
}

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>@QualityMessage.Quality_Assessment</h5>
                </div>
                <div class="ibox-content">
                    <div class="flot-chart farm-search">
                        <div class="row">
                            <div class="col-sm-6">
                                <b>@Message.Description:</b>
                                    @ViewBag.Description
                                <br />
                                <b>@Message.Date:</b>
                                    @ViewBag.Date
                                <br />
                                <b>@Message.Name:</b>
                                    @ViewBag.User
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-sm-6">
                                <form role="form" class="form-horizontal" method="post" action="/qualityassessments/update/@ViewBag.AssessmentId">
                                    @Html.Partial("~/Views/QualityAttributes/Preview.cshtml", Model)
                                    <div class="form-group pull-right">
                                        <button class="btn btn-sm btn-success" type="submit">
                                            <i class="fa fa-check"></i>
                                            @Message.Save
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
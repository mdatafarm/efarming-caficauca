                                            <div class="ibox-content" style="display: block;">
                                                <div class="flot-chart">
                                                    <div class="charts" id="clasification">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

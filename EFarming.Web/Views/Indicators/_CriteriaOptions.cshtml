<table class="table table-striped table-hover table-condensed">
    <thead>
        <tr>
            <th>
                <div class="row">
                    <div class="col-md-4">@Message.Description</div>
                    <div class="col-md-4">@Message.Value</div>
                    <div class="col-md-4"></div>
                </div>
            </th>
        </tr>
    </thead>
    <tbody data-bind="foreach:CriteriaOptions">
        <tr data-bind="visible: visibleForm">
            <td>
                <div class="row">
                    <form class="form-inline to-validate table-form" autocomplete="off" data-bind="visible: visibleForm">
                        <input type="hidden" name="IndicatorId" data-bind="value: IndicatorId" />
                        <input type="hidden" name="CriteriaId" data-bind="value: CriteriaId" />
                        <div class="form-group col-md-4">
                            <input type="text" name="Description" class="form-control input-sm" placeholder="@Message.Description" data-bind="value: Description" required />
                        </div>
                        <div class="form-group col-md-4">
                            <input name="Value" type="number" class="form-control input-sm" placeholder="@Message.Value" required data-bind="value: Value" />
                        </div>

                        <div class="form-group col-md-4 pull-right">
                            <button type="button" class="btn btn-primary btn-sm" data-bind="visible: isNew(), click: Save">@Message.Create</button>
                            <button type="button" class="btn btn-primary btn-sm" data-bind="visible: !isNew(), click: Save">@Message.Save</button>
                            <button type="reset" class="btn btn-sm" data-bind="visible: !isNew(), click: Cancel">@Message.Cancel</button>
                        </div>
                    </form>
                </div>
            </td>
        </tr>
        <tr data-bind="visible: visibleInfo">
            <td>
                <div class="col-md-4">
                    <small data-bind="text: Description"></small>
                </div>
                <div class="col-md-4">
                    <small data-bind="text: Value"></small>
                </div>
                <div class="col-md-4 pull-right">
                    <a class="btn btn-link link-edit btn-sm" data-bind="click: ShowForm">
                        <span class="glyphicon glyphicon-pencil"></span>
                        @Message.Edit
                    </a>
                    <a class="btn btn-link link-delete btn-sm" data-bind="click: Delete">
                        <span class="glyphicon glyphicon-trash"></span>
                        @Message.Delete
                    </a>
                </div>
            </td>
        </tr>
    </tbody>
</table>
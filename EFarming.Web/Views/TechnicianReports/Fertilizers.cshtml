@model IEnumerable<EFarming.Web.Controllers.TechnicianReportsController.GroupedInformation>

@{
    ViewBag.Title = "Fertilizers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/themes/base/all.css" rel="stylesheet" />

@section scripts{
    <script src="~/Scripts/jquery-ui-1.10.4.min.js"></script>
    <script src="~/Scripts/Sustainability/TechnicianReports.js"></script>
}

@{
    double? totalEstimatedProduction = 0d;
    double? totalConsumption = 0d;
    double? totalCoffeeArea = 0d;
    double? totalCoffeeAreaFertiliersQuantity = 0d;
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2 class="page-name">Consumo de fertilizantes</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "TechnicianReports")">
                    Reportes
                </a>
            </li>

            <li class="active">
                <strong>Consumo de fertilizantes</strong>
            </li>
        </ol>
    </div>
</div>

<div class="row wrapper border-bottom white-bg page-heading" style="margin-top:15px">
    <div class="col-lg-10" style="margin-top:15px">
        <form class="form-inline col-md-12" role="form" method="get" action="~/TechnicianReports/Fertilizers">
            <input type="hidden" name="ProjectId" value="@ViewBag.ProjectId" />
            <div class="form-group">
                <label> Filtrar por fecha: Desde: </label>
                @*<label for="year">From:</label>*@
                <input type="date" id="start" name="start" class="form-control dateField" value="@string.Format("{0:dd/MM/yyyy}", ViewBag.SelectedStart)" />
            </div>
            <div class="form-group">
                <label for="year">Hasta: </label>
                <input type="date" id="end" name="end" class="form-control dateField" value="@string.Format("{0:dd/MM/yyyy}", ViewBag.SelectedEnd)" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-default">Buscar</button>
            </div>
        </form>
    </div>
</div>

<div class="wrapper wrapper-content">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-content row">
                <div class="col-lg-9">
                    <table class="table table-striped  table-hover table-condensed">
                        <thead>
                            <tr>
                                <th>promotor</th>
                                <th>producción estimada (kg)</th>
                                <th>Cantidad de fertilizantes</th>
                                <th>Área en café (Ha)</th>
                                <th>Cantidad/Ha</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.TechnicianName</td>
                                    <td class="textAling">@string.Format("{0:#,##0}", item.EstimatedProduction)</td>
                                    <td class="textAling">@string.Format("{0:#,##0}", item.FertilizersQuantity)</td>
                                    <td class="textAling">@string.Format("{0:#,##0}", item.CoffeeArea)</td>
                                    <td class="textAling">@item.CoffeeAreaFertilizersQuantity.Value.ToString("0.##")</td>
                                </tr>
                                totalEstimatedProduction = totalEstimatedProduction + item.EstimatedProduction;
                                totalCoffeeArea = totalCoffeeArea + item.CoffeeArea;
                                totalConsumption = totalConsumption + item.FertilizersQuantity;
                                totalCoffeeAreaFertiliersQuantity = totalConsumption / totalCoffeeArea;
                                

                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                @{
                                    //double? TotalPercentage = (TotalSaleskg / totalEstimatedProduction) * 100.0;
                                }
                                <th></th>
                                <th class="textAling">@string.Format("{0:#,##0}", totalEstimatedProduction)</th>
                                <th class="textAling">@string.Format("{0:#,##0}", totalConsumption)</th>
                                <th class="textAling">@string.Format("{0:#,##0}", totalCoffeeArea)</th>
                                <th class="textAling">@totalCoffeeAreaFertiliersQuantity.Value.ToString("0.##")</th>
                                @*<th>@TotalPercentage.Value.ToString("0.##") %</th>*@
                            </tr>
                        </tfoot>

                    </table>
                </div>
                <div class="col-lg-3">
                    <div class="ibox float-e-margins">
                        <div class="ibox-content information-content">
                            <div class="file-manager">
                                <h4 class="information">información</h4>
                                <div class="space-25"></div>
                                <ul class="folder-list m-b-md">
                                    <li>
                                        <i class="fa fa-angle-right">&nbsp;</i>
                                        proyecto:

                                    </li>
                                    <li>
                                        <span style="margin-left:50px"><strong>@ViewBag.Project</strong></span>
                                    </li>
                                    <li>
                                        <i class="fa fa-list">&nbsp;</i>
                                        proyectos:
                                        <ul>
                                            @foreach (var project in ViewBag.Projects)
                                            {
                                                <li>
                                                    <a href="@Url.Action("Fertilizers", "TechnicianReports", new { ProjectId = project.Id, start = ViewBag.SelectedStart, end = ViewBag.SelectedEnd })">
                                                        @project.Name
                                                    </a>
                                                </li>
                                            }
                                        </ul>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    var startDate = "@string.Format("{0:dd/MM/yyyy}", ViewBag.SelectedStart)";
    var endDate = "@string.Format("{0:dd/MM/yyyy}", ViewBag.SelectedEnd)";
</script>

@model EFarming.DTO.FarmModule.SoilAnalysisDTO
@Html.HiddenFor(model => model.FarmId)
<input type="hidden" value="@ViewBag.PageNumber" name="page" />

<div class="form-group has-feedback">
    @Html.LabelFor(model => model.Date, @Message.Date, new { @class = "col-sm-3 control-label hidden-xs" })
    <div class="col-sm-8">
        <input type="date" class="form-control" placeholder="@Message.Date" required value="@Model.InputDateFormated" name="Date" id="Date" />
        <span class="glyphicon form-control-feedback"></span>
        <span class="help-block"></span>
    </div>
</div>
<div class="form-group has-feedback">
    @Html.LabelFor(model => model.Comment, @Message.Comment, new { @class = "col-sm-3 control-label hidden-xs" })
    <div class="col-sm-8">
        @Html.TextAreaFor(model => model.Comment, new { @class = "form-control", placeholder = @Message.Comment, required = "required", rows = "6O" })
        <span class="glyphicon form-control-feedback"></span>
        <span class="help-block"></span>
    </div>
</div>
<div class="form-group has-feedback">
    @Html.LabelFor(model => model.Depth, @FarmMessages.Depth, new { @class = "col-sm-3 control-label hidden-xs" })
    <div class="col-sm-8">
        @Html.TextBoxFor(model => model.Depth, new { type = "number", @class = "form-control", placeholder = @FarmMessages.Depth, required = "required" })
        <span class="glyphicon form-control-feedback hidden"></span>
        <span class="help-block"></span>
    </div>
</div>
<div class="form-group">
    <div class="col-sm-offset-3 col-sm-9">
        <button class="btn btn-success">@Message.Save</button>
        <a class="btn btn-link link-delete modal-close" data-dismiss="modal">@Message.Close</a>
    </div>
</div>